@model FotografKullaniciViewModel
<div class="container mt-5">
    <form method="post" asp-action="FotografEkle" enctype="multipart/form-data">

        <div class="form-row">
            <div class="col">
                <input type="text" class="form-control" placeholder="Fotoğraf Açıklaması" name="FotografAciklamasi">
            </div>
        </div>
        <div class="form-row">
            <select class="form-select form-select-sm" style="margin-top:10px"  name="KategoriID" aria-label="Default select example" required>
                            
                @foreach (var item in Model.Kategoriler)
                {

                    <option value="@item.KategoriId">@item.KategoriIsmi</option>

                }

            </select>
        </div>
    

        <div class="form-group">

            <input type="file" name="file" id="file" style="margin-top:10px" class="form-control" required />
        </div>

  
        <button type="submit" style="margin-top:10px" class="btn btn-secondary btn-lg btn-block">Ekle</button>

    </form>
</div>